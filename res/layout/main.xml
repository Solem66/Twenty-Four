<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:rowCount="7" android:columnCount="6" android:touchscreenBlocksFocus="false">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/default_result"
            android:id="@+id/resultArea" android:layout_column="0" android:layout_row="0" android:textStyle="bold"
            android:gravity="center" android:layout_columnSpan="6"/>
    <Space
            android:layout_width="40dp"
            android:layout_height="75dp"
            android:layout_row="1" android:layout_column="0"/>
    <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/unknown_card"
            android:id="@+id/slot1" android:layout_row="1" android:layout_column="1" android:gravity="center"
            android:layout_columnSpan="1" android:background="#ffaaaaaa"
            android:textColor="#ff000000"/>
    <TextView android:layout_width="75dp" android:layout_height="75dp"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/unknown_card" android:id="@+id/slot2"
              android:layout_row="1" android:layout_column="2" android:gravity="center" android:background="#ffaaaaaa"
              android:textColor="#ff000000"/>
    <TextView android:layout_width="75dp" android:layout_height="75dp"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/unknown_card" android:id="@+id/slot3"
              android:layout_row="1" android:layout_column="3" android:gravity="center" android:background="#ffaaaaaa"
              android:textColor="#ff000000"/>
    <TextView android:layout_width="75dp" android:layout_height="75dp"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/unknown_card" android:id="@+id/slot4"
              android:layout_row="1" android:layout_column="4" android:gravity="center" android:background="#ffaaaaaa"
              android:textColor="#ff000000"/>
    <Space
            android:layout_width="40dp"
            android:layout_height="81dp"
            android:layout_row="1" android:layout_column="5"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:text="A"
            android:id="@+id/button1" android:layout_row="2" android:layout_column="1" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="2" android:id="@+id/button2"
            android:layout_row="2" android:layout_column="2" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="3" android:id="@+id/button3"
            android:layout_row="2" android:layout_column="3" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="4" android:id="@+id/button4"
            android:layout_row="2" android:layout_column="4" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="5" android:id="@+id/button5"
            android:layout_row="3" android:layout_column="1" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="6" android:id="@+id/button6"
            android:layout_row="3" android:layout_column="2" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="7" android:id="@+id/button7"
            android:layout_row="3" android:layout_column="3" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="8" android:id="@+id/button8"
            android:layout_row="3" android:layout_column="4" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="9" android:id="@+id/button9"
            android:layout_row="4" android:layout_column="1" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="10" android:id="@+id/button10"
            android:layout_row="4" android:layout_column="2" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="J" android:id="@+id/button11"
            android:layout_row="4" android:layout_column="3" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="Q" android:id="@+id/button12"
            android:layout_row="4" android:layout_column="4" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="K" android:id="@+id/button14"
            android:layout_row="5" android:layout_column="1" android:onClick="pickOneCard"/>
    <Button android:layout_width="75dp" android:layout_height="90dp" android:text="CLR" android:id="@+id/button13"
            android:layout_row="5" android:layout_column="4" android:onClick="resetContent"/>
</GridLayout>

